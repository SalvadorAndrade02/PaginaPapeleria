---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Servicios - Papelería Don Pepe">
    <section class="section">
        <div class="container">
            <h1 class="title is-3 has-text-centered mb-6">
                Todos nuestros servicios
            </h1>

            <div class="columns is-multiline">
                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/impresiones.jpeg"
                                    alt="Copias e impresiones"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Copias e impresiones</p>
                            <p>
                                Blanco y negro o a color, con la mejor calidad.
                            </p>
                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModal()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img src="/utiles.jpg" alt="Útiles escolares" />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Útiles escolares</p>
                            <p>
                                Cuadernos, lápices, mochilas, reglas y más para
                                todas las edades.
                            </p>

                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModalUtiles()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/encuadernado.jpg"
                                    alt="Encuadernado y anillado"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Encuadernado y anillado</p>
                            <p>
                                Empastado profesional para tesis, trabajos o
                                manuales.
                            </p>

                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModalEncuadernado()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/oficina.jpeg"
                                    alt="Papelería de oficina"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Papelería de oficina</p>
                            <p>
                                Solicitudes de empleo y pagarés disponibles para
                                negocio o trámites.
                            </p>

                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModalOficina()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/whatsapp.jpeg"
                                    alt="Impresiones por WhatsApp"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Impresiones por WhatsApp</p>
                            <p>
                                Envía tu archivo y recógelo sin hacer fila.
                                Puedes escanear el codigo QR para iniciar un
                                chat con nostros.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/plastificado.jpeg"
                                    alt="Plastificado de documentos"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Plastificado de documentos</p>
                            <p>
                                Protección duradera para tus papeles
                                importantes.
                            </p>

                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModalPlastificado()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/regalo.jpeg"
                                    alt="Plastificado de documentos"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Regalos</p>
                            <p>
                                ¿Buscar decorar un regalo? Nosotros podemos
                                envolver o embolsar regalos a gusto de cada
                                cliente. El precio depende del tamaño del mismo.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/juguetes.jpg"
                                    alt="Plastificado de documentos"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Venta de juguetes</p>
                            <p>
                                Un detalle pequeño, para los mas pequeños de la
                                familia, con nosotros podras encontrar una
                                variedad de juguete para los mas pequeños del
                                hogar.
                                Puede preguntar via WhatsApp la disponibilidad de algunos.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img
                                    src="/joyeria.jpg"
                                    alt="Plastificado de documentos"
                                />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-5">Venta de Joyeria</p>
                            <p>
                                Si buscas un detalle especial para una persona especial, prueba dandole una pulsera o collar de oro laminado.
                            </p>

                            <div class="has-text-centered mt-4">
                                <button
                                    class="button is-link is-small"
                                    onclick="abrirModalJoyeria()"
                                >
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="has-text-centered mt-6">
                <a href="/" class="button is-light"> ← Volver al inicio </a>
            </div>
        </div>
    </section>

    <!-- Modal para Copias -->
    <div id="modal-copias" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Detalles de Copias e Impresiones</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModal()"></button>
            </header>
            <section class="modal-card-body">
                <ul>
                    <li>
                        <strong>📄 Copia a Blanco y negro tamaño carta:</strong>
                        $1.00
                    </li>
                    <li>
                        <strong
                            >📄 Impresión a Blanco y negro tamaño carta:</strong
                        > $2.00
                    </li>
                    <li>
                        <strong>📄 Copia a color tamaño carta:</strong> $2.50
                    </li>
                    <li>
                        <strong>📄 Impresión a color tamaño carta:</strong> $3.00
                        - $4.00
                    </li>
                </ul>
                <p class="mt-3">
                    <em>También imprimimos desde WhatsApp.</em>
                </p>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-primary" onclick="cerrarModal()"
                    >Cerrar</button
                >
            </footer>
        </div>
    </div>

    <!-- Modal para Útiles Escolares -->
    <div id="modal-utiles" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Útiles Escolares</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModalUtiles()"></button>
            </header>
            <section class="modal-card-body">
                <div class="media mb-4">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="/cuaderno.jpg" alt="Cuaderno" />
                        </p>
                    </figure>
                    <div class="media-content">
                        <p><strong>Cuaderno profesional:</strong> $25.00</p>
                    </div>
                </div>

                <div class="media mb-4">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="/lapiz.jpeg" alt="Lápiz" />
                        </p>
                    </figure>
                    <div class="media-content">
                        <p><strong>Lápiz del #2:</strong> $3.00</p>
                    </div>
                </div>

                <div class="media mb-4">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="/colores.jpeg" alt="Colores" />
                        </p>
                    </figure>
                    <div class="media-content">
                        <p><strong>Colores (12 piezas):</strong> $20.00</p>
                    </div>
                </div>

                <div class="media mb-4">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img
                                src="/geometria.webp"
                                alt="Juego de geometría"
                            />
                        </p>
                    </figure>
                    <div class="media-content">
                        <p><strong>Juego de geometría:</strong> $18.00</p>
                    </div>
                </div>

                <div class="media">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="/gomas.webp" alt="Mochila" />
                        </p>
                    </figure>
                    <div class="media-content">
                        <p><strong>Gomas para borrar:</strong> desde $10.00</p>
                    </div>
                </div>
            </section>

            <footer class="modal-card-foot">
                <button class="button is-primary" onclick="cerrarModalUtiles()"
                    >Cerrar</button
                >
            </footer>
        </div>
    </div>

    <!-- Modal Encuadernado -->
    <div id="modal-encuadernado" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Encuadernado y Anillado</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModalEncuadernado()"></button>
            </header>
            <section class="modal-card-body has-text-centered">
                <figure class="image is-128x128 is-inline-block mb-4">
                    <img
                        src="/engargolado.webp"
                        alt="Engargolado"
                        style="border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"
                    />
                </figure>
                <p><strong>Engargolado tamaño carta:</strong> $20.00</p>
                <p><strong>Engargolado tamaño oficio:</strong> $25.00</p>
                <p class="mt-3">
                    Incluye pasta transparente y cartulina negra.
                </p>
            </section>
            <footer class="modal-card-foot">
                <button
                    class="button is-primary"
                    onclick="cerrarModalEncuadernado()">Cerrar</button
                >
            </footer>
        </div>
    </div>

    <!-- Modal Papelería de Oficina -->
    <div id="modal-oficina" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Papelería de Oficina</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModalOficina()"></button>
            </header>
            <section class="modal-card-body has-text-centered">
                <div class="mb-5">
                    <figure class="image is-128x128 is-inline-block">
                        <img
                            src="/solicitud.jpg"
                            alt="Solicitud de empleo"
                            style="border-radius: 6px;"
                        />
                    </figure>
                    <p class="mt-2">
                        <strong>Solicitud de empleo:</strong> $3.00
                    </p>
                </div>

                <div>
                    <figure class="image is-128x128 is-inline-block">
                        <img
                            src="/pagare.jpg"
                            alt="Pagaré legal"
                            style="border-radius: 6px;"
                        />
                    </figure>
                    <p class="mt-2"><strong>Pagaré:</strong> $2.50</p>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-primary" onclick="cerrarModalOficina()"
                    >Cerrar</button
                >
            </footer>
        </div>
    </div>

    <!-- Modal Plastificado -->
    <div id="modal-plastificado" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Plastificado (Enmicado)</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModalPlastificado()"></button>
            </header>
            <section class="modal-card-body has-text-centered">
                <figure class="image is-128x128 is-inline-block mb-4">
                    <img
                        src="/enmicado.jpg"
                        alt="Enmicado"
                        style="border-radius: 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);"
                    />
                </figure>
                <p><strong>Enmicado tamaño carta:</strong> $8.00</p>
                <p><strong>Enmicado tamaño credencial:</strong> $4.00</p>
                <p class="mt-3">
                    Ideal para proteger constancias, credenciales o documentos
                    importantes.
                </p>
            </section>
            <footer class="modal-card-foot">
                <button
                    class="button is-primary"
                    onclick="cerrarModalPlastificado()">Cerrar</button
                >
            </footer>
        </div>
    </div>

    <!-- Modal Joyeria -->
    <div id="modal-joyeria" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Joyeria</p>
                <button
                    class="delete"
                    aria-label="close"
                    onclick="cerrarModalJoyeria()"></button>
            </header>
            <section class="modal-card-body has-text-centered">
                <div class="mb-5">
                    <figure class="image is-128x128 is-inline-block">
                        <img
                            src="/pulsera.jpg"
                            alt="Pulsera de oro laminado"
                            style="border-radius: 6px;"
                        />
                    </figure>
                    <p class="mt-2">
                        <strong>Pulsera de oro laminado:</strong> $80.00
                    </p>
                </div>

                <div>
                    <figure class="image is-128x128 is-inline-block">
                        <img
                            src="/collar.webp"
                            alt="Collar de oro laminado"
                            style="border-radius: 6px;"
                        />
                    </figure>
                    <p class="mt-2"><strong>Collar de oro laminado:</strong> $85.00</p>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button
                    class="button is-primary"
                    onclick="cerrarModalJoyeria()">Cerrar</button
                >
            </footer>
        </div>
    </div>
</Layout>

<script is:inline>
    function abrirModal() {
        document.getElementById("modal-copias").classList.add("is-active");
    }
    function cerrarModal() {
        document.getElementById("modal-copias").classList.remove("is-active");
    }
    function abrirModalUtiles() {
        document.getElementById("modal-utiles").classList.add("is-active");
    }
    function cerrarModalUtiles() {
        document.getElementById("modal-utiles").classList.remove("is-active");
    }
    function abrirModalEncuadernado() {
        document
            .getElementById("modal-encuadernado")
            .classList.add("is-active");
    }
    function cerrarModalEncuadernado() {
        document
            .getElementById("modal-encuadernado")
            .classList.remove("is-active");
    }
    function abrirModalOficina() {
        document.getElementById("modal-oficina").classList.add("is-active");
    }
    function cerrarModalOficina() {
        document.getElementById("modal-oficina").classList.remove("is-active");
    }
    function abrirModalPlastificado() {
        document
            .getElementById("modal-plastificado")
            .classList.add("is-active");
    }
    function cerrarModalPlastificado() {
        document
            .getElementById("modal-plastificado")
            .classList.remove("is-active");
    }
    function abrirModalJoyeria() {
        document
            .getElementById("modal-joyeria")
            .classList.add("is-active");
    }
    function cerrarModalJoyeria() {
        document
            .getElementById("modal-joyeria")
            .classList.remove("is-active");
    }
</script>
